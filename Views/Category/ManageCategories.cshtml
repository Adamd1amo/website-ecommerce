@model IEnumerable<DoAn1.Models.Category>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1>List of Categories</h1>
    <p style="text-align:right;margin-right:20px;">
        <a class="btn btn-outline-primary" asp-action="CreateCategory">Create New</a>
    </p>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    </th>
                    <th></th>
                    <th>Edit Action</th>
                    <th>Details Action</th>
                    <th>Delete Action</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                        <td class="text-center">
                            <a asp-action="EditCategory" class="btn btn-outline-primary" asp-route-CategoryId="@item.CategoryId">Edit</a>
                        </td>
                        <td class="text-center">
                            <a asp-action="DetailCategory" class="btn btn-outline-info" asp-route-CategoryId="@item.CategoryId">Details</a>
                        </td>
                        <td class="text-center">
                            <a asp-action="DeleteCategory" class="btn btn-outline-danger" asp-route-CategoryId="@item.CategoryId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
